<%- contentFor('body') %>
<div class="container">
  <h2>Novo Menu</h2>
        <div class="mt-5">
        <form action="http://localhost:3000/post/user" method="POST" name="user" id="user">
          <div class="form-group">
            <label for="name" class="bmd-label-floating"> Nome</label>
            <input type="text" class="form-control" id="name" name="user[name]" />
            <span class="bmd-help">We'll never share your complete name with anyone else.</span>
          </div>
          <div class="form-group">
            <label for="email" class="bmd-label-floating"> Email</label>
            <input type="email" class="form-control" id="email" name="user[email]" />
            <span class="bmd-help">We'll never share your mail with anyone else.</span>
          </div>

          <div class="form-group">
              
              <label for="sector" class="bmd-label-floating">Setores</label>
             
              <select class="form-control" id="sector" name="user[sector]">
                  <% for(sector of sectors) {%>
                  <option value="<%= sector.id %>"><%= sector.sector %></option>
                
                  <% } %>
              </select>
            
            </div>


          <div class="form-group">
              <label for="password" class="bmd-label-floating" > Senha</label>
              <input type="password" class="form-control" id="password" name="user[password]" />
              <span class="bmd-help">We'll never share your password with anyone else.</span>
          </div>
        
            
          
              <div class="form-check">
                     
                          <input type="checkbox" class="form-check-input" name="user[active]" id='active' />
                          <label  class="form-check-label">  Ativo </label>
              </div>

              <%- include('../buttons/buttonSubmit',{url:'/list/user'}) %>
        
        </form>
        </div>

  
</div>