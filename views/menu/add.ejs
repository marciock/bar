<%- contentFor('body') %>
<div class="container">
  <h2>Novo Menu</h2>
        <div class="mt-5">
        <form action="http://localhost:3000/post/menu" method="POST" name="menu" id="menu">
            <div class="form-group">
              <label for="name" class="bmd-label-floating"> Título</label>
              <input type="text" class="form-control" id="title" name="menu[title]" />
              <span class="bmd-help">We'll never share your complete name with anyone else.</span>
            </div>
            <div class="form-group">
              <label for="image" class="bmd-label-floating"> Imagem</label>
              <input type="file" class="form-control-file" id="image" name="menu[imagel]" />
              <span class="bmd-help">We'll never share your mail with anyone else.</span>
            </div>
            <div class="form-group">
              <label for="folder" class="bmd-label-floating"> Pasta</label>
              <input type="text" class="form-control" id="folder" name="menu[folder]" />
              <span class="bmd-help">We'll never share your complete name with anyone else.</span>
            </div>
            <div class="form-group">
              <label for="description" class="bmd-label-floating"> Descrição</label>
              <input type="text" class="form-control" id="descriptiom" name="menu[description]" />
              <span class="bmd-help">We'll never share your complete name with anyone else.</span>
            </div>
            
          
              <div class="form-check">
                     
                          <input type="checkbox" class="form-check-input" name="menu[active]" />
                          <label  class="form-check-label">  Ativo </label>
              </div>

              <%- include('../buttons/buttonSubmit',{url:'/list/menu'}) %>
         
        
          
           
        
        </form>
        </div>

  
</div>